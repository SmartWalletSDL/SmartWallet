<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/whoAddedWhat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="WHO added WHAT"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <TextView
        android:id="@+id/youOweHowMuch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You owe $60"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/whoAddedWhat"
        app:layout_constraintTop_toBottomOf="@id/whoAddedWhat" />

    <TextView
        android:id="@+id/activityDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/youOweHowMuch"
        app:layout_constraintTop_toBottomOf="@id/youOweHowMuch" />

    <View
        android:id="@+id/view5"
        android:layout_width="327dp"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="#347E7A7A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityDate" />
</androidx.constraintlayout.widget.ConstraintLayout>